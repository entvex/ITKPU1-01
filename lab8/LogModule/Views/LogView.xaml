<UserControl x:Class="LogModule.Views.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogModule.Views"
             mc:Ignorable="d">
    <Border BorderBrush="Blue" Background="Black" BorderThickness="1" VerticalAlignment="Stretch" Width="auto" Height="auto">

        <StackPanel Height="auto" Width="auto">
            <TextBlock Background="LightBlue" Text="Log" FontSize="16" FontWeight="Bold" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TextAlignment="Center"/>
            <ListView Background="Black" Foreground="White" BorderThickness="0" Name="LogListView" ItemsSource="{Binding LogList}" />
        </StackPanel>
    </Border>
</UserControl>
